source :rubygems

gem 'cucumber', '~> 1.2.3'
gem 'rspec'
gem 'gizmo'
gem 'capybara', '~> 1.1.4'            # driver agnostic cucumber test API
gem 'selenium-webdriver', '~> 2.31.0'
gem 'term-ansicolor', '~> 1.0.7'

if RUBY_VERSION =~ /1.8/
  gem 'ruby-debug'              # "require 'ruby-debug'; debugger" and run (sometimes needs a switch like spec -u)
else
  gem 'debugger'
end

gem 'capybara-page-object', '~> 0.6.0'
