source :rubygems

gem 'cucumber'
gem 'rspec'
gem 'gizmo'
gem 'capybara', '~> 1.1.2'            # driver agnostic cucumber test API
gem 'selenium-webdriver'
gem 'term-ansicolor'

if RUBY_VERSION =~ /1.8/
  gem 'ruby-debug'              # "require 'ruby-debug'; debugger" and run (sometimes needs a switch like spec -u)
else
  gem 'debugger'
end

gem 'capybara-page-object'
